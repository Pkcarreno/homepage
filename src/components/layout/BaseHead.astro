---
import '@/styles/global.css'

import type { ComponentProps } from 'astro/types'

import Metatags from '@/components/generic/Metatags.astro'

import Font from '../generic/Font.astro'

type Props = Pick<
  ComponentProps<typeof Metatags>,
  'title' | 'description' | 'withoutTitleTemplate'
>
const { title, description, withoutTitleTemplate } = Astro.props
---

<head>
  <Metatags
    title={title}
    withoutTitleTemplate={withoutTitleTemplate}
    description={description}
  />
  <Font />
</head>
