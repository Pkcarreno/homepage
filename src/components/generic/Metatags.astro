---
import { SEO } from 'astro-seo'

import { seoConfig } from '@/data/seo-config.js'

interface Props {
  title: string
  withoutTitleTemplate?: boolean
  description: string
  ogImage?: URL
}

const {
  title,
  description,
  withoutTitleTemplate,
  ogImage = new URL('/og/default.png', Astro.url)
} = Astro.props
---

<meta charset="utf-8" />
<SEO
  title={title}
  titleTemplate={withoutTitleTemplate ? undefined : '%s - PK'}
  description={description}
  openGraph={{
    basic: {
      title: title,
      type: seoConfig.type,
      image: ogImage.toString()
    }
  }}
  twitter={{
    creator: seoConfig.twitter.creator,
    title: title,
    description: description,
    image: ogImage.toString()
  }}
  extend={{
    link: [
      {
        rel: 'icon',
        type: 'image/svg+xml',
        href: '/favicon.svg'
      },
      {
        rel: 'sitemap',
        href: '/sitemap-index.xml'
      }
    ],
    meta: [
      {
        name: 'theme-color',
        content: '#fffaeb'
      },
      {
        name: 'theme-color',
        content: '#140f00',
        media: '(prefers-color-scheme: dark)'
      },
      {
        name: 'viewport',
        content: 'width=device-width,initial-scale=1'
      },
      {
        name: 'generator',
        content: Astro.generator
      }
    ]
  }}
/>
