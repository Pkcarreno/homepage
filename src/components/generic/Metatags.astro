---
import { SEO } from 'astro-seo'

import { metaConfig } from '@/config'

interface Props {
  title: string
  withoutTitleTemplate?: boolean
  description: string
  ogImage?: URL
}

const {
  title,
  description,
  withoutTitleTemplate,
  ogImage = new URL('/og/default.png', Astro.url)
} = Astro.props
---

<meta charset="utf-8" />
<SEO
  title={title}
  titleTemplate={withoutTitleTemplate
    ? undefined
    : `%s ${metaConfig.titleTemplate}`}
  description={description}
  openGraph={{
    basic: {
      title: title,
      type: 'website',
      image: ogImage.toString()
    },
    image: {
      height: 630,
      width: 1200,
      type: 'website'
    }
  }}
  twitter={{
    creator: '@pkcarreno',
    title: title,
    description: description,
    image: ogImage.toString(),
    card: 'summary_large_image'
  }}
  extend={{
    link: [
      {
        rel: 'icon',
        type: 'image/svg+xml',
        href: '/favicon.svg'
      },
      {
        rel: 'sitemap',
        href: '/sitemap-index.xml'
      }
    ],
    meta: [
      {
        name: 'theme-color',
        content: metaConfig.themeColor.light
      },
      {
        name: 'theme-color',
        content: metaConfig.themeColor.dark,
        media: '(prefers-color-scheme: dark)'
      },
      {
        name: 'viewport',
        content: 'width=device-width,initial-scale=1'
      },
      {
        name: 'generator',
        content: Astro.generator
      }
    ]
  }}
/>
