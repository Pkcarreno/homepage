---
import { getAllWritings } from "@/api/collections";
import Anchor from "@/components/generic/anchor.astro";
import Layout from "@/layouts/layout.astro";

const entries = await getAllWritings();
---

<Layout
  title="Escritos"
  description="Ocurrencias que creo que valen la pena ser compartidas."
>
  <p>Lista de escritos.</p>

  <br>

  <ul class="list-none p-0">
    {
            entries.map((entry) => {
                const tags = entry.data.tags;
                const date = entry.data.pubDate;

                return (
                    <li class="flex flex-col space-y-1">
                        <Anchor
                            href={`/escritos/${entry.id}`}
                            class="w-fit text-lg font-bold capitalize"
                        >
                            {entry.data.title}
                        </Anchor>
                        <small class="text-muted-foreground">
                            {entry.data.description}
                        </small>
                        <div class="flex flex-wrap items-baseline gap-1">
                            <i class="text-muted-foreground/70 text-xs">
                                {date instanceof Date
                                    ? date.toLocaleDateString("es", {
                                          year: "numeric",
                                          month: "short",
                                          day: "numeric",
                                      })
                                    : date}
                            </i>

                            <span>.</span>

                            {tags && (
                                <small class="text-muted-foreground text-right text-xs capitalize">
                                    {tags.join(", ")}
                                </small>
                            )}
                        </div>
                    </li>
                );
            })
        }
  </ul>
</Layout>
