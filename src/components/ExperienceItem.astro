---
const {job, at, atUrl = "", from, to, end} = Astro.props
---

<div>
  <div class="mb-3">
    <h4 class="font-normal">
      {job} @ {atUrl ? (
        <a href={atUrl} target="_blank" class="hover:underline underline-offset-4 dark:decoration-primary">{at}</a>
      ) : (
        <>{at}</>
      )}
    </h4>
    <p class="italic text-text/70">{from} - {to}</p>
  </div>

  <div class="pl-4 mb-2">
    <slot />
  </div>
  {!end && (
    <div class="bg-gradient-to-r from-primary to-accent h-[2px] mb-2"/>
  )}
</div>
