---
import { localizedHTML as favicons } from "astro-favicons/middleware";
import { SEO, type SEOProps } from "astro-seo";
import { metaConfig } from "@/config";

interface Props {
  title: string;
  noTemplate?: boolean;
  description: string;
  ogImage?: URL;
  article?: NonNullable<SEOProps["openGraph"]>["article"];
}

const {
  title,
  description,
  noTemplate,
  article,
  ogImage = new URL("/og/default.png", Astro.url),
} = Astro.props;
---

<meta charset="utf-8">
<SEO
  title={title}
  titleTemplate={noTemplate ? undefined : `%s ${metaConfig.titleTemplate}`}
  description={description}
  openGraph={{
    basic: {
      title: title,
      type: 'website',
      image: ogImage.toString()
    },
    article,
    optional: {
      description
    },
    image: {
      height: 630,
      width: 1200,
      type: 'website'
    }
  }}
  twitter={{
    creator: '@pkcarreno',
    title: title,
    description: description,
    image: ogImage.toString(),
    card: 'summary_large_image'
  }}
  extend={{
    link: [
      {
        rel: 'sitemap',
        href: '/sitemap-index.xml'
      }
    ],
    meta: [
      {
        name: 'viewport',
        content: 'width=device-width,initial-scale=1'
      },
      {
        name: 'generator',
        content: Astro.generator
      }
    ]
  }}
/>
<Fragment set:html={favicons(Astro.currentLocale)}/>
